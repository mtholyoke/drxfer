<h1>Listing users</h1>

<table>
  <tr>
    <th>Admin</th>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
    <th>Agreements</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= user.admin? ? 'admin' : '' %>">
    <td><%= user.admin %></td>
    <td><%= user.first_name %> <%= user.last_name %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.agreements.count %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Remove User', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


<h1>New transfer</h1>

<%= form_for([@agreement,@transfer], :html => {:multipart => true}) do |f| %>
  <% if @transfer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transfer.errors.count, "error") %> prohibited this transfer from being saved:</h2>

      <ul>
      <% @transfer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    Agreement: <%= @agreement.name %>
  </p>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => '60x4' %>
  </div>
  
  <div class="field">
  <%= f.fields_for :attachments do |attachment| %>
    <% if attachment.object.new_record? %>
      <%= attachment.file_field(:asset) %>
    <% else %>
      <%= link_to(attachment, attachment.object.asset.url) %>
      <%= attachment.hidden_field :_destroy %>
      <%= attachment.link_to_remove "remove" %>
    <% end %>  
  <% end %>
  </div>  
  
  <div class="actions">
    <%= f.submit "Transfer!" %>
  </div>
<% end %>


<%= link_to 'Back to agreement', @agreement %>

<h2>Transfer Agreements</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Users</th>
    <th>Destination Folder</th>
    <th>Transfers</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @agreements.each do |agreement| %>
  <tr>
    <td><%= agreement.name %></td>
    <td><%= agreement.users_summary %></td>
    <td><%= (agreement.folder ? '<code>' + agreement.folder.name + '</code>' : '<i>None</i>').html_safe %></td>    
    <td><%= agreement.transfers.size %></td>
    <td><%= link_to 'Show', agreement %></td>
    <td><%= link_to 'Edit', edit_agreement_path(agreement) %></td>
    <td><% if agreement.transfers.size == 0 -%><%= link_to 'Destroy', agreement, :confirm => 'Are you sure?', :method => :delete %><% end -%></td>
  </tr>
<% end %>
</table>

<br />

